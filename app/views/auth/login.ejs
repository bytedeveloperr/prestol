<%- layout("layouts/other"); %>

<div class="card mt-5">
	<div class="card-body">
		<form class="" method="POST">
			<h4 class="font-weight-normal mb-3 text-center">Login to Prestol</h4>
			<input type="hidden" name="_csrf" value="<%= csrf %>">
			<%- include("../messages/error") %>
			<div class="form-group">
				<label for="email">Email Address</label>
				<input type="email" name="email" class="form-control" placeholder="Email Address" id="email">
			</div>
			
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" name="password" class="form-control" placeholder="Password" id="password">
			</div>

			<button type="submit" class="btn btn-primary">Login</button>
			<p class="mt-3">Not Signed Up? <a href="/signup">Sign up</a></p>
		</form>
	</div>
</div>